<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/common_blue" >

    <LinearLayout
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_v1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/return_selector"
            android:gravity="center_vertical"
            android:text="测试返回" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_function"
        style="@style/button_v4"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/list_general_item_heigh"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/normal_marginLeftorRight"
        android:background="@drawable/title_btn_selector" />

</RelativeLayout>