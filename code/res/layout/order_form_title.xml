<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/calendar_title_year_heigh" 
    
    >

    <TextView
        android:id="@+id/tv_name"
        style="@style/description_v5"
        android:layout_width="@dimen/calendar_h"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="bottom"
         android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="@dimen/flg_list_calendar_padding"
        />

    <TextView
        style="@style/description_v7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_price"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/calendar_day_headers_paddingbottom"
       
        android:text="@string/order_price" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/spec_v3_v1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="bottom"
        android:paddingLeft="@dimen/normal_marginLeftorRight2"
        android:paddingRight="@dimen/date_text_marginleft"
        android:text="" />

</RelativeLayout>