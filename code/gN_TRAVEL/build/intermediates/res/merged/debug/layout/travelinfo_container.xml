<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/bg_table" >

        <TextView
            android:id="@+id/tv_travelName"
            style="@style/description_v18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/flg_list_item_marginLeftorRight"
            android:text="12/25从北京到上海" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/flg_list_item_marginLeftorRight"
            android:scaleType="center"
            android:src="@drawable/travel_down_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height" 
            android:background="@drawable/bg_table_bottom">

            <Button
                android:id="@+id/btn_details"
                style="@style/description_v3"
                android:layout_width="@dimen/general_btn_width"
                android:layout_height="@dimen/general_btn_heigh"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/flg_list_item_marginLeftorRight"
                android:background="@drawable/btn_start_route"
                android:text="@string/details" />

            <Button
                android:id="@+id/btn_goOn"
                android:layout_width="@dimen/general_btn_width"
                android:layout_height="@dimen/general_btn_heigh"
                android:layout_toLeftOf="@id/btn_details"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_start_route"
                android:layout_marginRight="@dimen/flg_list_item_marginLeftorRight"
                android:text="@string/go_travel"
                style="@style/description_v3" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/travelinfo_container.xml -->