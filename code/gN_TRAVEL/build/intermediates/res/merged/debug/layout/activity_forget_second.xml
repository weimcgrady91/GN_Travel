<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/register_title"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin2"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_forget_second_note"
                style="@style/description_v5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_margin"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/general_row_heigh"
                android:layout_weight="2"
                android:background="@drawable/bg_table_4"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_reg_yanzheng"
                    style="@style/description_v5"
                    android:layout_width="@dimen/city_hint_dialog"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/general_margin"
                    android:gravity="center_vertical"
                    android:text="@string/yanzhengma" />

                <ImageView
                    android:layout_width="@dimen/dividerHeight"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/line_top_bottom_distance"
                    android:layout_marginTop="@dimen/line_top_bottom_distance"
                    android:background="@drawable/dividing_line_vertical" />

                <EditText
                    android:id="@+id/et_forget_yanzheng_second"
                    style="@style/description_v23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/general_margin"
                    android:background="@android:color/transparent"
                    android:hint="@string/pleaseyanzhengcode"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_forget_yanzheng_refrash"
                style="@style/description_v7"
                android:layout_width="@dimen/general_search_left_table_width"
                android:layout_height="@dimen/general_row_heigh"
                android:layout_marginLeft="@dimen/normal_marginLeftorRight"
                android:background="@drawable/white_btn_selector" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_forget_next"
        style="@style/button_v4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_row_heigh"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin2"
        android:background="@drawable/red_btn_selector"
        android:text="@string/next" />

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/activity_forget_second.xml -->