<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:minHeight="62dp"
    android:orientation="horizontal" 
    android:padding="0dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/slt_newtrip_ic_plane" />

    <TextView
        android:id="@+id/tv_takeOffDate"
        style="@style/list_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/img_icon"
        android:ellipsize="end"
        android:text="12/25" />

    <TextView
        android:id="@+id/tv_takeOffTime"
        style="@style/list_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_takeOffDate"
        android:layout_below="@id/tv_takeOffDate"
        android:text="18:24起飞" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/list_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text="春秋MS808" 
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/group_flight_item.xml -->