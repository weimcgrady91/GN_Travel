<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:background="@drawable/bg_table_4"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_row_heigh" >

                <TextView
                    android:id="@+id/tv_trip_name"
                    style="@style/spec_v8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/second_line_title_marginLeft"
                    android:text="@string/edit_trip_name" />

                <ImageView
                    android:id="@+id/img_cha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/general_margin"
                    android:background="@drawable/blue_cha" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_container_img_margin_top"
                android:background="@color/text_color_v3" />

            <EditText
                android:id="@+id/et_edit_trip_name"
                style="@style/description_v16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_row_heigh"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/date_pick_text_margin"
                android:layout_marginLeft="@dimen/second_line_title_marginLeft"
                android:layout_marginRight="@dimen/second_line_title_marginLeft"
                android:layout_marginTop="@dimen/date_pick_text_margin"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/bottom_container_img_margin_top"
                android:background="@drawable/bg_table"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/date_pick_container_heigh"
                android:layout_marginBottom="@dimen/second_line_marginTop2"
                android:layout_marginLeft="@dimen/second_line_title_marginLeft"
                android:layout_marginRight="@dimen/second_line_title_marginLeft"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_dialog_cancel"
                    style="@style/button_v8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/second_line_title_marginLeft"
                    android:layout_weight="1"
                    android:background="@drawable/white_btn_selector"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btn_dialog_sure"
                    style="@style/spec_v1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/white_btn_selector"
                    android:text="@string/delect" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/trip_name_edit_dialog.xml -->