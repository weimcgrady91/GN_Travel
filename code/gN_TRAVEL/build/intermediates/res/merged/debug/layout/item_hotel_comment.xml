<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="47dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_hotel_comm_tv_score"
            style="@style/spec_v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"/>

        <TextView
            style="@style/description_v11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:layout_marginLeft="9dp" />

        <TextView
            android:id="@+id/item_hotel_comm_tv_author"
            style="@style/description_v11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            style="@style/description_v11"
            android:id="@+id/item_hotel_comm_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <TextView
        style="@style/list_v5"
        android:id="@+id/item_hotel_comm_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="9dp"
        android:paddingLeft="13dp"
        android:paddingRight="9dp"/>

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/item_hotel_comment.xml -->