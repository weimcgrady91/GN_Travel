<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/weathertitlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/weather_bg" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            layout="@layout/item_vp_dot"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/hotel_weather_ll_dots"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/item_weather_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/activity_weather.xml -->