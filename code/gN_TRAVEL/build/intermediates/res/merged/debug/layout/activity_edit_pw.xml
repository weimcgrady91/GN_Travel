<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/login_title"
        layout="@layout/titlebar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_margin"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin2"
                android:background="@drawable/bg_table_4"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/general_row_heigh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_now_pw_text"
                        style="@style/description_v5"
                        android:layout_width="@dimen/text_width"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_marginLeftorRight"
                        android:text="@string/now_pw" />

                    <ImageView
                        android:id="@+id/img_edit_1"
                        android:layout_width="@dimen/dividerHeight"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/line_top_bottom_distance"
                        android:layout_marginTop="@dimen/line_top_bottom_distance"
                        android:layout_toRightOf="@+id/tv_now_pw_text"
                        android:background="@drawable/dividing_line_vertical" />

                    <EditText
                        android:id="@+id/et_edit_now_pw"
                        style="@style/description_v7"
                        android:layout_width="@dimen/address_width"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/general_margin"
                        android:layout_toRightOf="@+id/img_edit_1"
                        android:background="@android:color/transparent"
                        android:hint="@string/please_now_pw"
                        android:maxLength="16"
                        android:password="true"
                        android:singleLine="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:background="@drawable/dividing_line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/general_row_heigh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_new_pw_text"
                        style="@style/description_v5"
                        android:layout_width="@dimen/text_width"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_marginLeftorRight"
                        android:text="@string/new_pw" />

                    <ImageView
                        android:id="@+id/img_edit_2"
                        android:layout_width="@dimen/dividerHeight"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/line_top_bottom_distance"
                        android:layout_marginTop="@dimen/line_top_bottom_distance"
                        android:layout_toRightOf="@+id/tv_new_pw_text"
                        android:background="@drawable/dividing_line_vertical" />

                    <EditText
                        android:id="@+id/et_edit_new_pw"
                        style="@style/description_v7"
                        android:layout_width="@dimen/address_width"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/general_margin"
                        android:layout_toRightOf="@+id/img_edit_2"
                        android:background="@android:color/transparent"
                        android:hint="@string/please_new_pw"
                        android:maxLength="16"
                        android:password="true"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/img_new_ming_or_an"
                        style="@style/description_v18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/general_margin"
                        android:layout_marginRight="@dimen/normal_marginLeftorRight"
                        android:background="@drawable/an_code"
                        android:text="@string/sendyanzhengcode" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                style="@style/description_v14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/date_text_marginleft"
                android:layout_marginTop="@dimen/second_line_title_marginLeft"
                android:text="@string/passwordguize" />

            <TextView
                style="@style/description_v14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/date_text_marginleft"
                android:layout_marginTop="@dimen/normal_marginLeftorRight2"
                android:text="@string/member_center_edit" />

            <Button
                android:id="@+id/btn_edit_pw"
                style="@style/button_v4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height"
                android:layout_marginLeft="@dimen/normal_marginLeftorRight"
                android:layout_marginRight="@dimen/normal_marginLeftorRight"
                android:layout_marginTop="@dimen/actionbar_group_h"
                android:background="@drawable/red_btn_selector"
                android:text="@string/finish" />

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/activity_edit_pw.xml -->