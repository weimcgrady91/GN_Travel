<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_form_title"
        android:background="@color/common_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_airline_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/slt_weather" />

        <TextView
            android:id="@+id/tv_order_form_airline_name"
            style="@style/list_v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_airline_icon"
            android:ellipsize="end"
            android:text="@string/weather_info" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="@dimen/order_ll_height"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/order_form_detail_weather.xml -->