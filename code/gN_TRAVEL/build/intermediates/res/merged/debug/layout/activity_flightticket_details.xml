<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg" >

    <LinearLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:background="@drawable/punctuality"
            android:orientation="vertical"
            android:padding="0dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_title_heigh"
                android:background="@drawable/second_title"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_flightNum"
                    style="@style/description_v6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/general_margin" />

                <TextView
                    android:id="@+id/tv_takeOffDate"
                    style="@style/description_v6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/general_margin"
                    android:layout_toRightOf="@id/tv_flightNum" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/second_line_title_heigh2"
                android:background="@drawable/middle_table"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/general_margin2"
                        android:layout_marginTop="@dimen/general_margin2"
                        android:contentDescription="@string/travel"
                        android:scaleType="center"
                        android:src="@drawable/start" />

                    <TextView
                        android:id="@+id/tv_takeOffTime"
                        style="@style/description_v7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv1"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@id/iv1"
                        android:contentDescription="@string/travel"
                        android:text="22:10" />

                    <TextView
                        android:id="@+id/tv_dportCode"
                        style="@style/description_v7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv1"
                        android:layout_marginLeft="@dimen/general_margin2"
                        android:layout_toRightOf="@id/tv_takeOffTime"
                        android:text="荷花机场" />

                    <ImageView
                        android:id="@+id/iv_dportWeatherType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/general_margin2"
                        android:background="@drawable/sun"
                        android:contentDescription="@string/travel"
                        android:scaleType="center" />

                    <TextView
                        android:id="@+id/tv_dPortBuildingID"
                        style="@style/description_v8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_dportCode"
                        android:layout_below="@id/tv_dportCode"
                        android:text="荷花机场" />

                    <TextView
                        android:id="@+id/tv_dPortCityTmp"
                        style="@style/description_v8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/iv_dportWeatherType"
                        android:layout_below="@id/iv_dportWeatherType"
                        android:text="晴-15c" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/second_line_title_heigh2"
                android:background="@drawable/middle_table"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/general_margin2"
                        android:layout_marginTop="@dimen/general_margin2"
                        android:contentDescription="@string/travel"
                        android:scaleType="center"
                        android:src="@drawable/end" />

                    <TextView
                        android:id="@+id/tv_arriveTime"
                        style="@style/description_v7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv2"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@id/iv2"
                        android:contentDescription="@string/travel"
                        android:text="00:40" />

                    <TextView
                        android:id="@+id/tv_aportCode"
                        style="@style/description_v7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv2"
                        android:layout_marginLeft="@dimen/general_margin2"
                        android:layout_toRightOf="@id/tv_arriveTime"
                        android:text="首都国际机场" />

                    <ImageView
                        android:id="@+id/iv_aportWeatherType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/general_margin2"
                        android:background="@drawable/sun"
                        android:contentDescription="@string/travel"
                        android:scaleType="center" />

                    <TextView
                        android:id="@+id/tv_aPortBuildingID"
                        style="@style/description_v8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_aportCode"
                        android:layout_below="@id/tv_aportCode"
                        android:text="首都机场T3" />

                    <TextView
                        android:id="@+id/tv_aPortCityTmp"
                        style="@style/description_v8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/iv_aportWeatherType"
                        android:layout_below="@id/iv_aportWeatherType"
                        android:text="晴-15c"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/second_line_title_heigh3" >

                <TextView
                    android:id="@+id/tv_mealType"
                    style="@style/description_v9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:id="@+id/tv_punctualityRate"
                    style="@style/description_v9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_craftType"
                    style="@style/description_v9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:divider="@drawable/dividing_line_horizontal"
            android:listSelector="@drawable/listview_selector" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:text="@string/net_refresh"
            android:textColor="#909da8"
            android:textSize="28px" />
    </RelativeLayout>

    <include layout="@layout/general_loading" />

</FrameLayout><!-- From: file:/D:/APK1_GNBJ_TRAVEL/code/gN_TRAVEL/src/main/res/layout/activity_flightticket_details.xml -->