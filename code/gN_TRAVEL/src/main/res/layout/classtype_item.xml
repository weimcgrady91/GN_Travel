<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/actionbar_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/classType"
        style="@style/list_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/rate"
        style="@style/list_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/classType"
        android:textColor="@color/text_color_v6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/schedule"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollor"
            style="@style/spec_v3" />

        <TextView
            android:id="@+id/price"
            style="@style/spec_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="570" />
    </LinearLayout>

    <Button
        android:id="@+id/schedule"
        style="@style/button_v2"
        android:layout_width="@dimen/order_ll_height"
        android:layout_height="@dimen/second_line_image_marginRight"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/red_btn_selector"
        android:text="@string/yuding" />

</RelativeLayout>